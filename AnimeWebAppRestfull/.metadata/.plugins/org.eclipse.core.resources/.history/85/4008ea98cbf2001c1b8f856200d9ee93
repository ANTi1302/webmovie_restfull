package com.webfilm.anime.dao;

import java.util.List;

import org.springframework.data.jpa.repository.Query;
import org.springframework.data.jpa.repository.support.JpaRepositoryImplementation;
import org.springframework.data.repository.query.Param;

import com.webfilm.anime.entity.Movie;

public interface MovieDao extends JpaRepositoryImplementation<Movie, Integer>{

	@Query(value = "select * from movie where trending=:trending",nativeQuery = true)
	public List<Movie> listMovieTrend(@Param("trending") int trend);
}
